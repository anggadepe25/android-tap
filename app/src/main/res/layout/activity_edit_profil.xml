<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.edit_profil.activity_edit_profil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/gb_profil"
                android:src="@drawable/ic_user"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/txt_edit_profil"
                android:layout_marginBottom="20sp"
                android:layout_gravity="center_horizontal"
                android:text="Edit Profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10sp"
                app:errorEnabled="true"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:id="@+id/til_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="15sp"
                    android:textSize="14sp"
                    android:hint="Nama"
                    android:id="@+id/et_nama"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"/>

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                app:errorEnabled="true"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:id="@+id/til_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="15sp"
                    android:inputType="textEmailAddress"
                    android:textSize="14sp"
                    android:hint="Email"
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                app:errorEnabled="true"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:id="@+id/til_nohp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="15sp"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:hint="No HP"
                    android:id="@+id/et_nohp"
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                app:errorEnabled="true"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:id="@+id/til_branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="15sp"
                    android:textSize="14sp"
                    android:hint="Branch "
                    android:id="@+id/et_branch"
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                app:errorEnabled="true"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:id="@+id/til_jenis_kelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="15sp"
                    android:textSize="14sp"
                    android:hint="Jenis Kelamin"
                    android:id="@+id/et_jenis_kelamin"
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                app:errorEnabled="true"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:id="@+id/til_tgl_lahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="15sp"
                    android:inputType="datetime"
                    android:textSize="14sp"
                    android:hint="Tanggal Lahir"
                    android:id="@+id/et_tgl_lahir"
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                app:errorEnabled="true"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:id="@+id/til_tempat_tinggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="15sp"
                    android:textSize="14sp"
                    android:hint="Tempat Tinggal"
                    android:id="@+id/et_tempat_tinggal"
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                app:errorEnabled="true"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:id="@+id/til_kampus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="15sp"
                    android:textSize="14sp"
                    android:hint="Kampus"
                    android:id="@+id/et_kampus"
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"/>

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                app:errorEnabled="true"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:id="@+id/til_jurusan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="15sp"
                    android:textSize="14sp"
                    android:hint="Jurusan"
                    android:id="@+id/et_jurusan"
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"/>

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                app:errorEnabled="true"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:id="@+id/til_semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="15sp"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:hint="Semester"
                    android:id="@+id/et_semester"
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                app:errorEnabled="true"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:id="@+id/til_hobi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="15sp"
                    android:textSize="14sp"
                    android:hint="Hobi"
                    android:id="@+id/et_hobi"
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                app:errorEnabled="true"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:id="@+id/til_instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="15sp"
                    android:textSize="14sp"
                    android:hint="Instagram"
                    android:id="@+id/et_instagram"
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"/>

            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_alignParentBottom="true"
        android:textColor="#fff"
        android:background="@drawable/round_border"
        android:id="@+id/btn_simpan_profil"
        android:text="Simpan"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>

</RelativeLayout>